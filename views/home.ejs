<html>
    <head>
      
        <title>
            <%= locals.title %>
        </title>
        <script src="https://kit.fontawesome.com/f80c4e0252.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="/css/home.css">
    </head>
    <body>
        <!--Heading-->
        <h1>TODO APP</h1>
        <!--Main div that contains all the elements-->
        <div class="card">
            <!--Form to collect the information-->
            <form id="create-list" action="/create" method ="POST">
                <!--Description to be added-->
                <div id="description">
                    DESCRIPTION
                    <br>
                    <input type="text" name="description"  placeholder="Add description" required>
                </div>
                <!--Date-->
                <div id="date">
                    DATE
                    <br>
                    <input type="date" name="date" required>
                </div>
                <!--Dropdown to collect the category-->
                <div id="category">
                    CATEGORY
                    <br>
                    <select name="type">
                        <option disabled selected hidden>Choose a Category</option>
                        <option>Work</option>
                        <option>School</option>
                        <option>Urgent</option>
                        <option>Exam</option>
                        <option>Meeting</option>
                    </select>
                </div>
                <!--Submit button-->
                <div id="submit">
                    
                    <button type="submit">
                        <i class="fas fa-plus"></i>
                        ADD
                    </button>
                </div>
                
            </form>
    
                <!--List to show all the todo lists-->
                <ul class="list">
                    <% for(let i of doc) {%>
                        <div class="show">
                            <li>
                                <div class="description"><%= i.description %></div>
                                <div class="delete">
                                    <a href="/destroy/<%= i.id %>">
                                        <i class="far fa-trash-alt"></i>
                                    </a>
                                </div>
                                
                            </li>
                            <li>
                                Category:
                               <span><%= i.type %></span> 
                            </li>
                            <li>
                                <i class="fas fa-calendar-week"></i>
                                <span><%= i.date %></span>
                            </li>
                        </div>
                    <%} %>
                        
                    
                </ul>
            

        </div>
    </body>
</html>